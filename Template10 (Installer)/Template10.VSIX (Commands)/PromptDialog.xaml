<ui:DialogWindow x:Class="Template10.VSIX.Commands.PromptDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Template10.VSIX.Commands"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
                 Background="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
                 MinWidth="300"
                 MaxWidth="300"
                 MinHeight="210"
                 MaxHeight="210"
                 d:DesignHeight="210"
                 d:DesignWidth="300"
                 mc:Ignorable="d">
    <ui:DialogWindow.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowTextBrushKey}}" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowTextBrushKey}}" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowTextBrushKey}}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowBackgroundBrushKey}}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static ui:EnvironmentColors.ToolWindowTextBrushKey}}" />
        </Style>
    </ui:DialogWindow.Resources>
    <StackPanel Margin="10">
        <TextBlock x:Name="pageNameLabel"
                   Margin="0,0,0,3"
                   Text="Page name dt" />

        <TextBox x:Name="pageName_TextBox" Margin="0,0,0,10" />

        <CheckBox x:Name="useModel_checkBox"
                  Content="use model DT"
                  Checked="useModel_checkBox_Checked"
                  Unchecked="useModel_checkBox_Unchecked"
                  IsChecked="True"
                  Margin="0,0,0,10" />
        
        <GroupBox Header="Open file dt" Padding="0,5" x:Name="openFileGroup">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="openView_checkBox" Content="View dt" IsChecked="True" Margin="10,0"/>
                <CheckBox x:Name="openViewModel_checkbox" Content="ViewModel dt" IsChecked="True" Margin="0,0,10,0"/>
                <CheckBox x:Name="openModel_checkbox" Content="Model dt " IsChecked="True"/>
            </StackPanel>
        </GroupBox>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0">

            <Button x:Name="generateButton"
                    Click="generateButton_Click"
                    Content="Generate dt"
                    Margin="0,0,10,0" />

            <Button x:Name="cancelButton"
                    Click="cancelButton_Click"
                    Content="Cancel dt"
                    Margin="0,0,10,0" />
        </StackPanel>    
    </StackPanel>
</ui:DialogWindow>
