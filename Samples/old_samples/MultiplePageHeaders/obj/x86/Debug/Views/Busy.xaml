<UserControl x:ConnectionId='1' x:Class="MultiplePageHeaders.Views.Busy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MultiplePageHeaders.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300" d:DesignWidth="400"
             mc:Ignorable="d">

    <Viewbox Height="32" HorizontalAlignment="Center"
             VerticalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ProgressRing x:ConnectionId='2' Width="16" Height="16"
                          Foreground="White"                                         />
            <TextBlock x:ConnectionId='3' Grid.Column="1" Margin="12,0,0,0"
                       VerticalAlignment="Center" Foreground="White"
                                                                                       />
        </Grid>
    </Viewbox>

</UserControl>


