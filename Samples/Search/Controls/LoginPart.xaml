<UserControl x:Class="Sample.Controls.LoginPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Sample.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="300" d:DesignHeight="300"
             mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <StackPanel>
            <TextBox Header="Username" />
            <TextBox Header="Password" />
            <Button Click="LoginClicked" Margin="0,12,0,0">Login</Button>
        </StackPanel>
    </Grid>
</UserControl>
