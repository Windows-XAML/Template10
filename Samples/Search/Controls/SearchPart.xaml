<UserControl x:Class="Sample.Controls.SearchPart" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Sample.Controls" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="300" d:DesignHeight="300"
             mc:Ignorable="d">

    <ListView Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20" SelectionChanged="SearchSelectionChanged">
        <ListView.Header>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="200" Header="Search" />
                <Button Margin="4,0,0,0" VerticalAlignment="Bottom">
                    <SymbolIcon Symbol="Find" />
                </Button>
            </StackPanel>
        </ListView.Header>
        <x:String>Sample result 01</x:String>
        <x:String>Sample result 02</x:String>
        <x:String>Sample result 03</x:String>
        <x:String>Sample result 04</x:String>
        <x:String>Sample result 05</x:String>
        <x:String>Sample result 06</x:String>
    </ListView>

</UserControl>
