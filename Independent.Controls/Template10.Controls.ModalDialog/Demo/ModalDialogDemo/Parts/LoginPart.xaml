<UserControl
    x:Class="ModalDialogDemo.Parts.LoginPart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="150"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBox x:Name="Username" PlaceholderText="User Name" Margin="5"></TextBox>
            <PasswordBox x:Name="Password"  PlaceholderText="Password" Margin="5,0"></PasswordBox>
            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Right">
                <Button Margin="5,0" Content="Login" />
                <Button Margin="5,0" Content="Cancel" Click="ClosedClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
