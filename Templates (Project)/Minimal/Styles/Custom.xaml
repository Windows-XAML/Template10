<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="using:Template10.Controls">
    <Color x:Key="CustomColor">OrangeRed</Color>
    <x:Double x:Key="NarrowMinWidth">0</x:Double>
    <x:Double x:Key="NormalMinWidth">521</x:Double>
    <x:Double x:Key="WideMinWidth">1200</x:Double>
    <SolidColorBrush x:Key="CustomColorBrush" Color="{StaticResource CustomColor}" />
    <SolidColorBrush x:Key="ExtendedSplashBackground" Color="White" />
    <SolidColorBrush x:Key="ExtendedSplashForeground" Color="{StaticResource CustomColor}" />
    <SolidColorBrush x:Key="ModalBackground" Opacity=".5" Color="{StaticResource CustomColor}" />
    <Style TargetType="controls:HamburgerMenu">
        <Setter Property="VisualStateNarrowMinWidth" Value="{StaticResource NarrowMinWidth}" />
        <Setter Property="VisualStateNormalMinWidth" Value="{StaticResource NormalMinWidth}" />
        <Setter Property="VisualStateWideMinWidth" Value="{StaticResource WideMinWidth}" />
        <Setter Property="HamburgerBackground" Value="{ThemeResource CustomHamburgerBackground}" />
        <Setter Property="HamburgerForeground" Value="{ThemeResource CustomHamburgerForeground}" />
        <Setter Property="NavAreaBackground" Value="{ThemeResource CustomNavAreaBackground}" />
        <Setter Property="NavButtonBackground" Value="{ThemeResource CustomNavButtonBackground}" />
        <Setter Property="NavButtonCheckedBackground" Value="{ThemeResource CustomNavButtonCheckedBackground}" />
        <Setter Property="NavButtonForeground" Value="{ThemeResource CustomNavButtonForeground}" />
        <Setter Property="NavButtonHoverBackground" Value="{ThemeResource CustomNavButtonHoverBackground}" />
        <Setter Property="SecondarySeparator" Value="White" />
    </Style>
    <Style TargetType="controls:PageHeader">
        <!--<Setter Property="VisualStateNarrowMinWidth" Value="{StaticResource NarrowMinWidth}" />
        <Setter Property="VisualStateNormalMinWidth" Value="{StaticResource NormalMinWidth}" />-->
        <Setter Property="HeaderBackgroundBrush" Value="{ThemeResource CustomHeaderBackground}" />
        <Setter Property="HeaderForegroundBrush" Value="{ThemeResource CustomHeaderForeground}" />
    </Style>
    <Style TargetType="controls:Resizer">
        <Setter Property="GrabberVisibility" Value="Visible" />
        <Setter Property="GrabberBrush" Value="{StaticResource CustomColorBrush}"/>
    </Style>
    <ResourceDictionary.ThemeDictionaries>
        <!--  RequestedTheme=Dark  -->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="CustomHeaderBackground" Color="Gainsboro" />
            <SolidColorBrush x:Key="CustomHeaderForeground" Color="#FF2B2B2B" />
            <SolidColorBrush x:Key="CustomHamburgerBackground" Color="#FFD13438" />
            <SolidColorBrush x:Key="CustomHamburgerForeground" Color="White" />
            <SolidColorBrush x:Key="CustomNavAreaBackground" Color="#FF2B2B2B" />
            <SolidColorBrush x:Key="CustomNavButtonBackground" Color="Transparent" />
            <SolidColorBrush x:Key="CustomNavButtonCheckedBackground" Color="#FF7D1F22" />
            <SolidColorBrush x:Key="CustomNavButtonForeground" Color="White" />
            <SolidColorBrush x:Key="CustomNavButtonHoverBackground" Color="#FF434343" />
            <SolidColorBrush x:Key="SecondarySeparator" Color="Gray" />
        </ResourceDictionary>
        <!--  RequestedTheme=Light  -->
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="CustomHeaderBackground" Color="WhiteSmoke" />
            <SolidColorBrush x:Key="CustomHeaderForeground" Color="#FF2B2B2B" />
            <SolidColorBrush x:Key="CustomHamburgerBackground" Color="Gainsboro" />
            <SolidColorBrush x:Key="CustomHamburgerForeground" Color="Black" />
            <SolidColorBrush x:Key="CustomNavAreaBackground" Color="#FFF2F2F2" />
            <SolidColorBrush x:Key="CustomNavButtonBackground" Color="Transparent" />
            <SolidColorBrush x:Key="CustomNavButtonCheckedBackground" Color="PowderBlue" />
            <SolidColorBrush x:Key="CustomNavButtonForeground" Color="Black" />
            <SolidColorBrush x:Key="CustomNavButtonHoverBackground" Color="#FFCCE3F5" />
            <SolidColorBrush x:Key="SecondarySeparator" Color="Gray" />
        </ResourceDictionary>
        <!--  RequestedTheme=HighContrast  -->
        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="ExtendedSplashBackground" Color="Black" />
            <SolidColorBrush x:Key="ExtendedSplashForeground" Color="White" />
            <SolidColorBrush x:Key="ModalBackground" Color="Black" />
            <SolidColorBrush x:Key="CustomHamburgerBackground" Color="Black" />
            <SolidColorBrush x:Key="CustomHamburgerForeground" Color="White" />
            <SolidColorBrush x:Key="CustomNavAreaBackground" Color="Black" />
            <SolidColorBrush x:Key="CustomNavButtonBackground" Color="White" />
            <SolidColorBrush x:Key="CustomNavButtonCheckedBackground" Color="White" />
            <SolidColorBrush x:Key="CustomNavButtonForeground" Color="Black" />
            <SolidColorBrush x:Key="CustomNavButtonHoverBackground" Color="White" />
            <SolidColorBrush x:Key="SecondarySeparator" Color="White" />
            <SolidColorBrush x:Key="CustomHeaderBackground" Color="Black" />
            <SolidColorBrush x:Key="CustomHeaderForeground" Color="White" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
