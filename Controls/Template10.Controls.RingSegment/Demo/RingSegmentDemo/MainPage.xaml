<Page
    x:Class="RingSegmentDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RingSegmentDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Controls:RingSegment
            Width="400"
            Height="400"
            EndAngle="{Binding Value, ElementName=EndAngle}"
            Fill="SteelBlue"
            InnerRadius="{Binding Value, ElementName=InnerRadius}"
            Radius="{Binding Value, ElementName=OuterRadius}"
            StartAngle="{Binding Value, ElementName=StartAngle}"
            Stroke="Black" />
        <StackPanel
            Grid.Column="1"
            Width="400"
            Margin="16">
            <Slider
                x:Name="InnerRadius"
                Header="Inner Radius"
                Maximum="200"
                Minimum="10"
                Value="100" />
            <Slider
                x:Name="OuterRadius"
                Header="Outer Radius"
                Maximum="400"
                Minimum="210"
                Value="300" />
            <Slider
                x:Name="StartAngle"
                Header="Start Angle"
                Maximum="360"
                Minimum="-360"
                Value="0" />
            <Slider
                x:Name="EndAngle"
                Header="End Angle"
                Maximum="360"
                Minimum="-360"
                Value="120" />
        </StackPanel>
    </Grid>

